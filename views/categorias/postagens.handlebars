{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Título: {{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
            <hr>
            <small>Data de criação: {{date}}</small>
        </div>
    </div>
{{else}}
    <h4 class="mt=3">Nenhuma postagem cadastrada</h4>
{{/each}}