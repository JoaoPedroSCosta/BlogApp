<div class="jumbotron">
  <h1 class="display-4">Bem vindo ao Blog de NodeJs!</h1>
  <p class="lead">Exercício de NodeJs.</p>
  <hr class="my-4">
  <p>By João Pedro.</p>
  <p class="lead">
    <a class="btn btn-primary btn-lg" href="/usuarios/registro" role="button">Crie uma conta</a>
  </p>
</div>

<h2>Postagens recentes: </h2>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Título: {{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
            <hr>
            <small>{{categoria.nome}}</small><br>
            <small>Data de criação: {{date}}</small>
        </div>
    </div>
{{else}}
    <h4 class="mt=3">Nenhuma postagem cadastrada</h4>
{{/each}}