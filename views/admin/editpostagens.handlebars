    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Editar postagem: </h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" value={{postagem._id}} name="id">
            <label for="titulo">Novo título: </label>
                <input type="text" name="titulo" id="titulo" 
                placeholder="Título da postagem" class="form-control"
                value="{{postagem.titulo}}" required>
            <label for="slug">Novo slug: </label>
                <input type="text" name="slug" id="slug" 
                placeholder="Slug da postagem" class="form-control"
                value="{{postagem.slug}}" required>
            <label for="descricao">Nova descrição: </label>
                <input type="text" name="descricao" id="descricao" 
                placeholder="Descrição da postagem" class="form-control"
                value="{{postagem.descricao}}" required>
            <label for="conteudo">Novo conteúdo: </label>
                <input type="text" name="conteudo" id="conteudo" 
                placeholder="Conteúdo da postagem" class="form-control"
                value="{{postagem.conteudo}}" required>
            <label for="categoria">Nova categoria: </label>
                <select name="categoria" id="categoria" class="form-select">
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma categoria cadastrada</option>
                    {{/each}}
                </select>
            <button type="submit" class="btn btn-success mt-4">Editar postagem</button>
        </form>
    </div>
</div>
