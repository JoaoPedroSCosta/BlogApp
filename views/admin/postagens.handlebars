<h2>Lista de posts: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a> 

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Título: {{titulo}}</h4>
            <h4>Descrição: {{descricao}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Conteúdo: {{conteudo}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <small>Criada em: {{date}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-4">Editar postagem</button></a>
            <form action="/admin/postagens/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar postagem</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt=3">Nenhuma postagem cadastrada</h4>
{{/each}}